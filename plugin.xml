<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-bandyer" version="0.0.1"
    xmlns="http://apache.org/cordova/ns/plugins/1.0" 
    xmlns:android="http://schemas.android.com/apk/res/android">
    <name>BandyerPlugin</name>
    <author>Bandyer S.r.l.</author>
    <description>This plugin allows you to add BandyerSDK to your application using Bandyer Mobile SDK Native library</description>
    <keywords>bandyer, sdk, voice call, phone call, group call, chat, collaboration, screen sharing, file sharing</keywords>
    <license>GNU LESSER GENERAL PUBLIC LICENSE Version 3</license>
    <platform name="ios">
        <js-module name="BandyerPlugin" src="www/ios/BandyerPlugin.js">
            <clobbers target="BandyerPlugin" />
        </js-module>

        <edit-config target="NSCameraUsageDescription" file="*-Info.plist" mode="merge" overwrite="true">
            <string>Necessaria per l'utilizzo della libreria</string>
        </edit-config>
        <edit-config target="NSMicrophoneUsageDescription" file="*-Info.plist" mode="merge" overwrite="true">
            <string>Necessaria per l'utilizzo della libreria</string>
        </edit-config>
        <config-file parent="/*" target="config.xml">
            <feature name="BandyerPlugin">
                <param name="ios-package" value="BCPBandyerPlugin" />
            </feature>
        </config-file>
        <config-file target="*-Info.plist" parent="UIBackgroundModes">
            <array>
                <string>remote-notification</string>
            </array>
        </config-file>
        <config-file target="*-Debug.plist" parent="aps-environment">
            <string>development</string>
        </config-file>
        <config-file target="*-Release.plist" parent="aps-environment">
            <string>production</string>
        </config-file>
        <header-file src="src/ios/BCPConstants.h" />
        <header-file src="src/ios/BCPBandyerManager.h" />
        <source-file src="src/ios/BCPBandyerManager.m" />
        <header-file src="src/ios/BCPBandyerPlugin.h" />
        <source-file src="src/ios/BCPBandyerPlugin.m" />
        <header-file src="src/ios/BCPUsersDetailsCache.h" />
        <source-file src="src/ios/BCPUsersDetailsCache.m" />
        <header-file src="src/ios/NSString+BandyerPlugin.h" />
        <source-file src="src/ios/NSString+BandyerPlugin.m" />
        <resource-file src="src/ios/Resources/sample.mp4" />
        <framework src="PushKit.framework" weak="true"/>
        <podspec>
            <config>
                <source url="https://github.com/CocoaPods/Specs.git"/>
            </config>
            <pods use-frameworks="true">
                <pod name="BandyerSDK" git="https://github.com/Bandyer/Bandyer-iOS-SDK.git" />
            </pods>
        </podspec>
    </platform>

     <platform name="android" kotlin="1.3.40">
        <apply-plugin>kotlin-android-extension</apply-plugin>
        <apply-plugin>kotlin-apt</apply-plugin>

        <js-module name="BandyerPlugin" src="www/android/BandyerPlugin.js">
            <clobbers target="BandyerPlugin" />
        </js-module>

        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="BandyerPlugin">
                <param name="android-package" value="com.bandyer.cordova.plugin.BandyerPlugin" />
            </feature>
        </config-file>
        
        <config-file parent="/*" target="AndroidManifest.xml"></config-file>
    
        <source-file src="src/android/cordova_plugin/src/main/java/com" target-dir="java" />

        <framework custom="true" src="src/android/depsBuild.gradle" type="gradleReference" />
        <framework custom="true" src="src/android/cordova.gradle" type="gradleReference" />

        <dependency id="cordova-support-kotlin" url="https://github.com/kainonly/cordova-support-kotlin.git" />
        
    </platform>

</plugin>
