<?xml version='1.0' encoding='utf-8'?>
<plugin xmlns:android="http://schemas.android.com/apk/res/android" id="cordova-plugin-bandyer"
    version="0.0.2" xmlns="http://apache.org/cordova/ns/plugins/1.0">
    <name>BandyerPlugin</name>
    <author>Bandyer S.r.l.</author>
    <description>This plugin allows you to add BandyerSDK to your application using Bandyer Mobile
        SDK Native library
    </description>
    <keywords>bandyer, sdk, voice call, phone call, group call, chat, collaboration, screen sharing,
        file sharing
    </keywords>
    <license>GNU LESSER GENERAL PUBLIC LICENSE Version 3</license>

    <js-module name="BandyerPlugin" src="www/out/bandyer-plugin.min.js">
        <clobbers target="BandyerPlugin" />
    </js-module>

    <platform name="ios">

        <edit-config file="*-Info.plist" mode="merge" overwrite="true"
            target="NSCameraUsageDescription">
            <string>Necessaria per l'utilizzo della libreria</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" overwrite="true"
            target="NSMicrophoneUsageDescription">
            <string>Necessaria per l'utilizzo della libreria</string>
        </edit-config>
        <config-file parent="/*" target="config.xml">
            <feature name="BandyerPlugin">
                <param name="ios-package" value="BCPBandyerPlugin" />
            </feature>
        </config-file>
        <header-file src="src/ios/BCPConstants.h" />
        <source-file src="src/ios/BCPConstants.m" />
        <header-file src="src/ios/BCPCallClientEventEmitter.h" />
        <source-file src="src/ios/BCPCallClientEventEmitter.m" />
        <header-file src="src/ios/BCPBandyerManager.h" />
        <source-file src="src/ios/BCPBandyerManager.m" />
        <header-file src="src/ios/BCPBandyerEvents.h" />
        <source-file src="src/ios/BCPBandyerEvents.m" />
        <header-file src="src/ios/BCPBandyerPlugin.h" />
        <source-file src="src/ios/BCPBandyerPlugin.m" />
        <header-file src="src/ios/BCPUsersDetailsCache.h" />
        <source-file src="src/ios/BCPUsersDetailsCache.m" />
        <header-file src="src/ios/NSString+BandyerPlugin.h" />
        <source-file src="src/ios/NSString+BandyerPlugin.m" />
        <resource-file src="src/ios/Resources/sample.mp4" />
        <podspec>
            <config>
                <source url="https://github.com/CocoaPods/Specs.git" />
            </config>
            <pods use-frameworks="true">
                <pod name="BandyerSDK" git="https://github.com/Bandyer/Bandyer-iOS-SDK.git" />
            </pods>
        </podspec>
        <dependency id="cordova-plugin-device"
            url="https://github.com/apache/cordova-plugin-device" />
    </platform>

    <platform name="android" kotlin="1.3.40">
        <apply-plugin>kotlin-android-extension</apply-plugin>
        <apply-plugin>kotlin-apt</apply-plugin>

        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="BandyerPlugin">
                <param name="android-package"
                    value="com.bandyer.cordova.plugin.BandyerCordovaPlugin" />
            </feature>
        </config-file>

        <config-file parent="/manifest/application" target="AndroidManifest.xml">
            <receiver
                android:name="com.bandyer.cordova.plugin.notifications.BandyerNotificationReceiver"
                android:permission="com.google.android.c2dm.permission.SEND">

                <!-- High priority so Bandyer payloads can be intercepted always. -->
                <intent-filter android:priority="999">
                    <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                    <category android:name="$PACKAGE_NAME" />
                </intent-filter>
            </receiver>
        </config-file>

        <source-file src="src/android/src/main/java/com/bandyer/cordova/plugin"
            target-dir="java/com/bandyer/cordova" />

        <source-file
            src="src/android/src/main/release/java/com/bandyer/cordova/plugin/BuildConfig.java"
            target-dir="com/bandyer/cordova/plugin" />

        <framework custom="true" src="src/android/depsBuild.gradle" type="gradleReference" />
        <framework custom="true" src="src/android/cordova.gradle" type="gradleReference" />

        <dependency id="cordova-support-kotlin"
            url="https://github.com/kainonly/cordova-support-kotlin.git" />
        <dependency id="cordova-plugin-device"
            url="https://github.com/apache/cordova-plugin-device" />

    </platform>

</plugin>
