{
  "compilerOptions": {
    "outDir": "./www/out/types",
    "allowJs": true,
    "target": "es5",
    "declaration": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "transform": "typescript-is/lib/transform-inline/transformer",
        "disallowSuperfluousObjectProperties": true
      },
      { "transform": "@bandyer/ts-transformer-type-structure/transformer" }
    ],
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.promise",
      "es2015.collection"
    ]
  },
  "include": [
    "www/src/**/*.ts"
  ],
  "typedocOptions": {
    "mode": "file",
    "out": "docs"
  }
}
